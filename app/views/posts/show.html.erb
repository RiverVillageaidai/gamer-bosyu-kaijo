<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-md-4">
  
      <%= image_tag @post.user.get_profile_image(80,80) %><br>
      
      投稿者: <%= @post.user.name %><br>
        
    </div>

    <div class="col-md-7 offset-md-1">
      <%= image_tag @post.get_image(600,600), class: "img-fluid" %><br>

      タイトル: <%= @post.title %><br>
        
      本文: <%= @post.body %><br>

       <%= link_to  edit_post_path(@post.id) do%>
          <i class="fa-solid fa-right-from-bracket"></i>
          編集
        <%end%>
    </div>

  </div>



</div>