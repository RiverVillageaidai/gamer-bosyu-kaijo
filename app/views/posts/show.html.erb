<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      
      <%= link_to user_path(@post_user.id) do%> 
        <%= image_tag @post.user.get_profile_image(80,80) %><br>
      <% end %>
      投稿者: <%= @post.user.name %><br>
        
    </div>

    <div class="col-md-7 offset-md-1">
      <%= image_tag @post.get_image(600,600), class: "img-fluid" %><br>

      タイトル: <%= @post.title %><br>
        
      本文: <%= @post.body %><br>


        <% if @post.user_id == current_user.id %>
          <td><%= link_to "編集", edit_post_path(@post.id), class:"btn btn-sm btn-success" %></td>
          <td><%= link_to "削除", post_path(@post), class:"btn btn-sm btn-danger", method: :delete %></td>
        <% end %>

    </div>

  </div>



</div>