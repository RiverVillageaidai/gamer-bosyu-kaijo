<div class="container mt-4 bg-dark">
  <h1 class="m-2 p-2 text-center text-light">グループ作成</h1>
  <div class= "row p-2">
    <%= form_with(model: @group, local: true) do |f| %>
      <div class="form-group text-light">
        <label for="group_image">画像</label><br>
        <%= f.file_field :group_image, accept: "image/*" %> 
      </div>
      <div class="form-group text-light">
        <label for="group_name">グループ名</label>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group text-light">
        <label for="group_introduction">グループ紹介文</label>
        <%= f.text_area :introduction, class: 'form-control' %>
      </div>
      <div class="form-group"> 
        <%= f.submit 'グループ作成',class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>