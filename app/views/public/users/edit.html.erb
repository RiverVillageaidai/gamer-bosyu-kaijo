<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>


<%= form_with(model: @user, local: true) do |f| %>

  <div class="form-group">
      <label for="user_image">Image</label>
      <%= f.file_field :profile_image, accept: "image/*" %> 
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

 <div class="form-group">
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
  </div>

   <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_field :introduction %>
  </div>

  <div class="form-group">
    <%= f.submit "更新" %>
  </div>
  
<% end %>

<%= link_to "退会する", deactivate_user_path(@user), class:"btn btn-sm btn-danger" %>
